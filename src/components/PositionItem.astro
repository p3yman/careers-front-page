---
import LocationIcon from "../images/location.svg";
const { data, slug } = Astro.props;
---

<a
  href={`/positions/${slug}`}
  class="group border border-slate-200 rounded-xl p-8 flex items-center justify-between bg-indigo-50/30 hover:bg-white hover:border-indigo-300 transition-colors duration-200"
>
  <div class="flex flex-col gap-2">
    <h1 class="font-bold text-lg text-slate-700 group-hover:text-indigo-600">
      {data.title}
    </h1>
    <h2 class="text-slate-500 text-sm">{data.category}</h2>
  </div>
  <div class="flex gap-1 items-center text-slate-600">
    <img src={LocationIcon.src} class="w-4" />
    {data.location}
  </div>
  <div class="flex gap-2">
    <span
      class="px-2 py-1 rounded-xl bg-green-100 text-xs font-semibold text-green-800"
      >{data.contract}</span
    >
    <span
      class="px-2 py-1 rounded-xl bg-blue-100 text-xs font-semibold text-blue-800"
      >{data.level}</span
    >
  </div>
</a>
